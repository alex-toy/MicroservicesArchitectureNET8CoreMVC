@using Transactions.Web.Dtos.Transports
@model IEnumerable<TransportDto>

<form>
    <div class="container row">
        @foreach (var transport in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="p-0 my-3 border rounded">
                    <div class="card">
                        <h3 class="card-title text-white-50 text-center py-2">@transport.From -> @transport.To</h3>
                        <img src="@transport.ImageUrl" class="card-img-top">
                        <div class="card-body">
                            <div class="d-flex justify-content-between py-2">
                                <span class="text-danger" style="font-size:20px;">@string.Format("{0:c}", transport.Price)</span>
                                <span class="badge bg-warning text-white p-2">@transport.Category</span>
                            </div>
                            <p class="card-text">@Html.Raw(transport.Price)</p>
                            <p class="card-text">@Html.Raw(transport.DistanceKm) Kilometers</p>
                            <div class="row">
                                <div class="col">
                                    <a asp-action="TransportDetails" asp-route-transportId="@transport.TransportId"
                                       class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</form>