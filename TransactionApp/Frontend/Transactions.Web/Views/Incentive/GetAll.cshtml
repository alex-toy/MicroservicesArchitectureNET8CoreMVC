@using Transactions.Web.Dtos.Data
@model IEnumerable<IncentiveDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h1 class="text-white">Incentives</h1>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-action="CouponCreate" class="btn btn-outline-primary"><i class="bi bi-plus-square"></i> Create New Incentive</a>
			</div>
		</div>
		<table class="table">
			<thead>
				<tr>
					<th>
						Incentive Code
					</th>
					<th>
						Min Transport Count
					</th>
					<th>
						Min Kilometers Count
					</th>
					<th>
						Bonus
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach(var item in Model)
				{
				<tr>
					<td>
						@item.IncentiveCode
					</td>
					<td>
						@item.MinTransportCount
					</td>
					<td>
						@item.MinKilometersCount
					</td>
					<td>
						@((item.Bonus).ToString("c"))
					</td>
					<td>
						<a asp-action="Delete" asp-route-couponId="@item.IncentiveId" class="btn btn-danger">
						<i class="bi bi-trash"></i>
						</a>
					</td>
				</tr>
				}
			</tbody>
		</table>

	</div>

</div>